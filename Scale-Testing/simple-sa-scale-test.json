{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "saName": {
        "type": "string",
        "defaultValue": "scratch",
        "metadata": {
          "description": "Base name for storage account"
        }
      },
      "saCount": {
        "type": "int",
        "defaultValue": 99,
        "minValue": 1,
        "maxValue": 100,
        "metadata": {
          "description": "Number of Storage Accounts deployed"
        }
      }
    },
    "variables": {
      "storageAccountType": "Standard_LRS",
      "newStorageAccountSuffix": "[concat(parameters('saName'), 'sa')]",
      "saUniqueString": "[concat('sa', uniqueString(resourceGroup().id))]"
    },
    "resources": [
      {
        "type": "Microsoft.Storage/storageAccounts",
        "name": "[concat(variables('saUniqueString')[copyIndex()], variables('newStorageAccountSuffix'))]",
        "location": "[resourceGroup().location]",
        "apiVersion": "2015-06-15",
        "copy": {
          "name": "storageLoop",
          "count": "[parameters('saCount')]"
        },
        "properties": {
          "accountType": "[variables('storageAccountType')]"
        }
      }
    ]
  }